    <% var colors = ['blue', 'green', 'yellow', 'orange', 'pink', 'purple' ] %>
    <% var font = 12 %>
    <% var col; %>
    <% var fonts = ['lato','lobster','Montserrat'] %>
    <% for(var i = 0; i < colors.length; i ++) { 
     if (i + 1 === colors.length){ 
         col = colors[0] 
        }else{ 
        col = colors[i + 1] 
        }%>
     <p style="color: <%= colors[i] %>;font-size: <%= font += 2 %>px;background-color: <%= col %>;"><%= colors[i] %></p>
    <% } %>

